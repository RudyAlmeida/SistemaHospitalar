<div class="col-lg-8 position-relative start-50 translate-middle-x">
  <h1 class="text-center ">Cadastre uma Especialidade</h1>
  <form action="/addEsp" method="post" id="cadEspForm">
    <div class="input-group">
      <span class="input-group-text" id="basic-addon1"><i class="bi bi-file-medical"></i></span>
      <input type="text" class="form-control" id="especialidade" name="especialidade" onkeyup="cadEspecialidades()" placeholder="Digite o nome da especialidade..." value="{{espNome}}" required>
      <button type="submit" class="btn btn-primary" id="cadBt">Cadastrar</button>
    </div>
  </form>

  <table class="table table-hover" id="tabEsp">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each especialidades}}
        <tr>
          <td>{{nome}}</td>
          <td>
            <a href="/cadEsp/editar/{{_id}}">
              <img class="editIcons" title="Editar" src="img/edit.png">
            </a>
            <a href="/cadEsp/excluir/{{_id}}">
              <img class="editIcons" title="Deletar" src="img/delete.png">
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<script src="/js/cadEspecialidades.js"></script>